# Включение обработки PHP файлов
AddHandler application/x-httpd-php .php

# Защита от прямого доступа к конфигурационным файлам
<FilesMatch "^(config|functions)\.php$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Установка кодировки по умолчанию
AddDefaultCharset UTF-8

# Включение отображения ошибок (для разработки)
# В продакшене закомментируйте следующие строки
php_flag display_errors On
php_value error_reporting E_ALL

